<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ergolasticprodlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.Ergolastic.ergolasticprodlist">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/ergolasticpre"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtergolasticfajasdesc1"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/ergolasticpre"
                    android:text="@string/txtergolasticfajasdesc" />

                <TextView
                    android:id="@+id/txtergolasticfaja1"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtergolasticfajasdesc1"
                    android:layout_toRightOf="@id/ergolasticpre"
                    android:text="@string/txtergolasticfaja1" />

                <Button
                    android:id="@+id/btnergolasticpre"
                    style="@style/btnvermas"
                    android:layout_above="@id/view1" />

                <TextView
                    android:id="@+id/precioergolasticpre"
                    style="@style/precio"
                    android:layout_below="@id/ergolasticpre" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/precioergolasticpre" />

                <ImageView
                    android:id="@+id/ergolasticpos"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view1"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtergolasticfajasdesc2"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view1"
                    android:layout_toRightOf="@id/ergolasticpos"
                    android:text="@string/txtergolasticfajasdesc" />

                <TextView
                    android:id="@+id/txtergolasticfaja2"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtergolasticfajasdesc2"
                    android:layout_toRightOf="@id/ergolasticpos"
                    android:text="@string/txtergolasticfaja2" />

                <Button
                    android:id="@+id/btnergolasticpos"
                    style="@style/btnvermas"
                    android:layout_above="@id/view2" />

                <TextView
                    android:id="@+id/precioergolasticpos"
                    style="@style/precio"
                    android:layout_below="@id/ergolasticpos" />

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/precioergolasticpos" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
