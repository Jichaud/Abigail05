<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chiccotwin1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.Chicco.chiccotwin1">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            style="@style/LinearCard">

            <android.support.v7.widget.CardView
                style="@style/card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/chiccotwin4"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/chiccotwin3"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/chiccotwin2"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/chiccotwin1"
                        android:layout_width="match_parent"
                        android:layout_height="280dp" />

                    <TextView
                        android:id="@+id/txtcolores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/chiccotwin1"
                        android:layout_margin="8dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/txtcolores"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/modelo1"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/txtcolores"
                        android:onClick="modelo1"
                        android:text="@string/modelo1"
                        style="@style/txtvistas" />

                    <TextView
                        android:id="@+id/modelo2"
                        android:layout_below="@id/txtcolores"
                        android:layout_centerHorizontal="true"
                        android:onClick="modelo2"
                        android:text="@string/modelo2"
                        style="@style/txtvistas" />

                    <TextView
                        android:id="@+id/modelo3"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/txtcolores"
                        android:onClick="modelo3"
                        android:text="@string/modelo3"
                        style="@style/txtvistas" />

                    <TextView
                        android:id="@+id/modelo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/modelo2"
                        android:background="@drawable/rounded"
                        android:onClick="modelo4"
                        android:text="@string/modelo4"
                        style="@style/txtvistas1" />

                    <View
                        android:id="@+id/view1"
                        style="@style/Divider"
                        android:layout_below="@id/modelo4" />

                    <TextView
                        android:id="@+id/encargo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded"
                        android:backgroundTint="@color/pink"
                        android:fontFamily="sans-serif-medium"
                        android:padding="10dp"
                        android:layout_below="@id/view1"
                        android:text="@string/porencargotxt"
                        android:textAlignment="center"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtchiccotwin1principal"
                        android:layout_below="@id/encargo"
                        android:text="@string/txtchiccotwin"
                        style="@style/txtcardprinc" />

                    <TextView
                        android:id="@+id/chiccotwin1txtdesc"
                        android:layout_below="@id/txtchiccotwin1principal"
                        android:text="@string/txtchiccotwin1"
                        style="@style/txtcarddesc" />

                    <View
                        android:id="@+id/view2"
                        style="@style/Divider"
                        android:layout_below="@id/chiccotwin1txtdesc" />

                    <TextView
                        android:id="@+id/preciochiccotwin1"
                        android:layout_below="@id/view2"
                        style="@style/txtcardprecio" />

                    <View
                        android:id="@+id/view3"
                        style="@style/Divider"
                        android:layout_below="@id/preciochiccotwin1" />

                    <Button
                        android:id="@+id/btnconsulta"
                        style="@style/btnstock"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/view3"
                        android:text="@string/stock" />

                    <Button
                        android:id="@+id/btnchiccotwin1"
                        style="@style/btncomprar"
                        android:layout_below="@id/view3"
                        android:layout_toRightOf="@id/btnconsulta"
                        android:text="@string/btnverprecio" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
