<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_colchon1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.abigail05.colchon1">

    <Button
        android:id="@+id/btnhome"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/verhome"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnvprod"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/verxprod"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnvmarca"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/verxmarca"
        android:textAllCaps="false"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/colchon5"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:src="@drawable/colchon5"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/colchon4"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:src="@drawable/colchon4"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/colchon3"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:src="@drawable/colchon3"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/colchon2"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:src="@drawable/colchon2"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/colchon1"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:src="@drawable/colchon1" />

                    <TextView
                        android:id="@+id/txtcolores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/colchon1"
                        android:layout_marginTop="10dp"
                        android:text="@string/txtcolores"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/modelo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/txtcolores"
                        android:onClick="modelo1"
                        android:text="@string/modelo1"
                        android:textColor="@color/grey"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/modelo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtcolores"
                        android:layout_centerHorizontal="true"
                        android:onClick="modelo2"
                        android:text="@string/modelo2"
                        android:textColor="@color/grey"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/modelo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/txtcolores"
                        android:onClick="modelo3"
                        android:text="@string/modelo3"
                        android:textColor="@color/grey"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/modelo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/modelo1"
                        android:layout_marginTop="20dp"
                        android:onClick="modelo4"
                        android:text="@string/modelo4"
                        android:textColor="@color/grey"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/modelo5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/modelo2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:onClick="modelo5"
                        android:text="@string/modelo5"
                        android:textColor="@color/grey"
                        android:textSize="18sp"/>

                    <View
                        android:id="@+id/view1"
                        style="@style/Divider"
                        android:layout_below="@id/modelo4" />

                    <TextView
                        android:id="@+id/txtcolchon1principal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/txtColchonPrincipal"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/colchon1txtdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtcolchon1principal"
                        android:paddingTop="10dp"
                        android:text="@string/txtColchonPrincipaldesc"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/view2"
                        style="@style/Divider"
                        android:layout_below="@id/colchon1txtdesc" />

                    <Button
                        android:id="@+id/btnconsulta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:backgroundTint="#FFFF"
                        android:paddingTop="10dp"
                        android:text="@string/stock"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btncolchon1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnconsulta"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="sans-serif-thin"
                        android:text="@string/btnverprecio"
                        android:textAllCaps="false"
                        android:textSize="16sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>