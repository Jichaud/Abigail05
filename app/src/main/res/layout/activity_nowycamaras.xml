<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nowycamaras"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.NowyBaby.nowycamaras">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/nowycamaras1"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtnowycamaras1principal"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/nowycamaras1"
                    android:text="@string/txtnowycamaras" />

                <TextView
                    android:id="@+id/txtnowycamaras1"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtnowycamaras1principal"
                    android:layout_toRightOf="@id/nowycamaras1"
                    android:text="@string/txtnowycamaras1" />

                <Button
                    android:id="@+id/btnnowycamaras1"
                    style="@style/btnvermas"
                    android:layout_above="@id/view1" />

                <TextView
                    android:id="@+id/precionowycamaras1"
                    style="@style/precio"
                    android:layout_below="@id/nowycamaras1" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/precionowycamaras1" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
