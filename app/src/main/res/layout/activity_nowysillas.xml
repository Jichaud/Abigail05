<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nowysillas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.NowyBaby.nowysillas">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/nowysillas1"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtnowysillas1principal"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/nowysillas1"
                    android:text="@string/txtnowysillas" />

                <TextView
                    android:id="@+id/txtnowysillas1"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtnowysillas1principal"
                    android:layout_toRightOf="@id/nowysillas1"
                    android:text="@string/txtnowysillas1" />

                <Button
                    android:id="@+id/btnnowysillas1"
                    style="@style/btnvermas"
                    android:layout_above="@id/view1" />

                <TextView
                    android:id="@+id/precionowysillas1"
                    style="@style/precio"
                    android:layout_below="@id/nowysillas1" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/precionowysillas1" />

                <ImageView
                    android:id="@+id/nowysillas2"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view1"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtnowysillas2principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view1"
                    android:layout_toRightOf="@id/nowysillas2"
                    android:text="@string/txtnowysillas" />

                <TextView
                    android:id="@+id/txtnowysillas2"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtnowysillas2principal"
                    android:layout_toRightOf="@id/nowysillas2"
                    android:text="@string/txtnowysillas2" />

                <Button
                    android:id="@+id/btnnowysillas2"
                    style="@style/btnvermas"
                    android:layout_above="@id/view2" />

                <TextView
                    android:id="@+id/precionowysillas2"
                    style="@style/precio"
                    android:layout_below="@id/nowysillas2" />

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/precionowysillas2" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
