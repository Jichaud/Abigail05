<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_colombraroprodlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.Colombraro.colombraroprodlist">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/colobaneras"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtcolobaneras"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/colobaneras"
                    android:text="@string/txtcolobaneras" />

                <TextView
                    android:id="@+id/txtcolobanerasdesc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtcolobaneras"
                    android:layout_toRightOf="@id/colobaneras"
                    android:text="@string/txtcolobanerasdesc" />

                <Button
                    android:id="@+id/btncolobaneras"
                    style="@style/btnvermas"
                    android:layout_below="@id/txtcolobanerasdesc"
                    android:layout_marginTop="20dp" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/btncolobaneras" />

                <ImageView
                    android:id="@+id/coloaccesorios"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view1"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtcoloaccesorios"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view1"
                    android:layout_toRightOf="@id/coloaccesorios"
                    android:text="@string/txtcoloaccesorios" />

                <TextView
                    android:id="@+id/txtcoloaccesoriosdesc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtcoloaccesorios"
                    android:layout_toRightOf="@id/coloaccesorios"
                    android:text="@string/txtcoloaccesoriosdesc" />

                <Button
                    android:id="@+id/btncoloaccesorios"
                    style="@style/btnvermas"
                    android:layout_below="@id/txtcoloaccesoriosdesc"
                    android:layout_marginTop="20dp" />

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/btncoloaccesorios" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
