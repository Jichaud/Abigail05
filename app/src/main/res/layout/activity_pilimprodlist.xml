<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pilimprodlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.pilim.pilimprodlist">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/pilim1"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtpilim1principal"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/pilim1"
                    android:text="@string/txtpiliprod" />

                <TextView
                    android:id="@+id/txtpilim1desc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtpilim1principal"
                    android:layout_toRightOf="@id/pilim1"
                    android:text="@string/txtpilim1desc" />

                <Button
                    android:id="@+id/btnpilim1"
                    style="@style/btnvermas"
                    android:layout_above="@id/view1" />

                <TextView
                    android:id="@+id/preciopilim1"
                    style="@style/precio"
                    android:layout_below="@id/pilim1" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/preciopilim1" />

                <ImageView
                    android:id="@+id/pilim2"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/view1" />

                <TextView
                    android:id="@+id/txtpili2principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view1"
                    android:layout_toRightOf="@id/pilim2"
                    android:text="@string/txtpili2principal" />

                <TextView
                    android:id="@+id/txtpili2desc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtpili2principal"
                    android:layout_toRightOf="@id/pilim2"
                    android:text="@string/txtpili2desc" />

                <Button
                    android:id="@+id/btnpilim2"
                    style="@style/btnvermas"
                    android:layout_above="@id/view2" />

                <TextView
                    android:id="@+id/preciopilim2"
                    style="@style/precio"
                    android:layout_below="@id/pilim2" />

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/preciopilim2" />

                <ImageView
                    android:id="@+id/pilim6"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/view2" />

                <TextView
                    android:id="@+id/txtpili3principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view2"
                    android:layout_toRightOf="@id/pilim6"
                    android:text="@string/txtpili3principal" />

                <TextView
                    android:id="@+id/txtpili3desc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtpili3principal"
                    android:layout_toRightOf="@id/pilim6"
                    android:text="@string/txtpili3desc" />

                <Button
                    android:id="@+id/btnpilim3"
                    style="@style/btnvermas"
                    android:layout_above="@id/view3" />

                <TextView
                    android:id="@+id/preciopilim3"
                    style="@style/precio"
                    android:layout_below="@id/pilim6" />


                <View
                    android:id="@+id/view3"
                    style="@style/Divider"
                    android:layout_below="@id/preciopilim3" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
