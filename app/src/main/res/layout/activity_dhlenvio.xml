<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dhlenvio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.dhlenvio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dhlimg"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dhllogo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:fontFamily="sans-serif-light"
                android:padding="6dp"
                android:text="¿Por qué DHL?"
                android:textColor="@color/cardview_light_background"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Porque nos brinda confianza y a vos seguridad"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:fontFamily="sans-serif-light"
                android:padding="6dp"
                android:text="¿Adónde llegamos?"
                android:textColor="@color/cardview_light_background"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="A todo el país"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:fontFamily="sans-serif-light"
                android:padding="6dp"
                android:text="¿Costo?"
                android:textColor="@color/cardview_light_background"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Completá la información en nuestro formulario de contacto y nos pondremos en contacto con vos a la brevedad"
                android:textSize="16sp"/>

            <View
                android:id="@+id/view1"
                style="@style/Divider"
                android:layout_below="@id/txthistoria" />

            <TextView
                android:id="@+id/txtvolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:fontFamily="sans-serif-light"
                android:padding="6dp"
                android:text="Ir al formulario de contacto..."
                android:textColor="@color/cardview_light_background"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
