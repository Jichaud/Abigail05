<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nukaccesorios3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.NUK.nukaccesorios3">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/nukaccesorios32"
                        android:layout_width="400dp"
                        android:layout_height="296dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/nukaccesorios31"
                        android:layout_width="400dp"
                        android:layout_height="296dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/nukaccesorios3"
                        android:layout_width="400dp"
                        android:layout_height="296dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/txtcolores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nukaccesorios3"
                        android:layout_margin="8dp"
                        android:padding="6dp"
                        android:text="@string/txtcolores"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/modelo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/txtcolores"
                        android:background="@drawable/rounded"
                        android:onClick="modelo1"
                        android:paddingBottom="6dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="6dp"
                        android:text="@string/modelo1"
                        android:textAlignment="center"
                        android:textColor="#E3F2FD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/modelo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtcolores"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded"
                        android:onClick="modelo2"
                        android:paddingBottom="6dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="6dp"
                        android:text="@string/modelo2"
                        android:textAlignment="center"
                        android:textColor="#E3F2FD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/modelo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/txtcolores"
                        android:background="@drawable/rounded"
                        android:onClick="modelo3"
                        android:paddingBottom="6dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="6dp"
                        android:text="@string/modelo3"
                        android:textAlignment="center"
                        android:textColor="#E3F2FD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view1"
                        style="@style/Divider"
                        android:layout_below="@id/modelo3" />

                    <TextView
                        android:id="@+id/txtnukaccesorios3principal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/txtnukaccesorios"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/txtnukaccesorios3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtnukaccesorios3principal"
                        android:paddingTop="10dp"
                        android:text="@string/txtnukaccesorios3"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/view2"
                        style="@style/Divider"
                        android:layout_below="@id/txtnukaccesorios3" />

                    <Button
                        android:id="@+id/btnconsulta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:backgroundTint="@color/pink"
                        android:paddingTop="10dp"
                        android:text="@string/stock"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btncompranukaccesorios3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnconsulta"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="sans-serif-thin"
                        android:text="@string/btnverprecio"
                        android:textAllCaps="false"
                        android:textSize="16sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
