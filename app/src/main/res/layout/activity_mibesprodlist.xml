<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mibesprodlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.mibes.mibesprodlist">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/mibesaccesorios"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtmibesaccesorios"
                    android:layout_toRightOf="@id/mibesaccesorios"
                    android:text="@string/txtmibesaccesorios"
                    style="@style/txtprincipal" />

                <TextView
                    android:id="@+id/txtmibesaccesoriosdesc"
                    android:layout_below="@id/txtmibesaccesorios"
                    android:layout_toRightOf="@id/mibesaccesorios"
                    android:text="@string/txtmibesaccesoriosdesc"
                    style="@style/txtdesc" />

                <Button
                    android:id="@+id/btnmibesaccesorios"
                    android:layout_below="@id/txtmibesaccesoriosdesc"
                    android:text="@string/btnver"
                    style="@style/btnvermas" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/btnmibesaccesorios" />

                <ImageView
                    android:id="@+id/mibesbaberos"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view1"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtmibesbaberos"
                    android:layout_below="@id/view1"
                    android:layout_toRightOf="@id/mibesbaberos"
                    android:text="@string/txtmibesbaberos"
                    style="@style/txtprincipal" />

                <TextView
                    android:id="@+id/txtmibesbaberosdesc"
                    android:layout_below="@id/txtmibesbaberos"
                    android:layout_toRightOf="@id/mibesbaberos"
                    android:text="@string/txtmibesbaberosdesc"
                    style="@style/txtdesc" />

                <Button
                    android:id="@+id/btnmibesbaberos"
                    android:layout_below="@id/txtmibesbaberosdesc"
                    android:text="@string/btnver"
                    style="@style/btnvermas" />

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/btnmibesbaberos" />

                <ImageView
                    android:id="@+id/mibes1"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view2"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtmibes1principal"
                    android:layout_below="@id/view2"
                    android:layout_toRightOf="@id/mibes1"
                    android:text="@string/txtmibes1principal"
                    style="@style/txtprincipal" />

                <TextView
                    android:id="@+id/txtmibes2principal"
                    android:layout_below="@id/txtmibes1principal"
                    android:layout_toRightOf="@id/mibes1"
                    android:text="@string/txtmibes2principal"
                    style="@style/txtdesc" />

                <Button
                    android:id="@+id/btnmibes1"
                    android:layout_below="@id/txtmibes2principal"
                    android:text="@string/btnver"
                    style="@style/btnvermas" />

                <View
                    android:id="@+id/view3"
                    style="@style/Divider"
                    android:layout_below="@id/btnmibes1" />

                <ImageView
                    android:id="@+id/mibescatres"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view3"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtmibescatres"
                    android:layout_toRightOf="@id/mibescatres"
                    android:text="@string/txtmibescatres"
                    android:layout_below="@id/view3"
                    style="@style/txtprincipal" />

                <TextView
                    android:id="@+id/txtmibescatresdesc"
                    android:layout_below="@id/txtmibescatres"
                    android:layout_toRightOf="@id/mibescatres"
                    android:text="@string/txtmibescatresdesc"
                    style="@style/txtdesc" />

                <Button
                    android:id="@+id/btnmibescatres"
                    android:layout_below="@id/txtmibescatresdesc"
                    android:text="@string/btnver"
                    style="@style/btnvermas" />

                <View
                    android:id="@+id/view4"
                    style="@style/Divider"
                    android:layout_below="@id/btnmibescatres" />

                <ImageView
                    android:id="@+id/mibesmoises"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view4"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtmibesmoises"
                    android:layout_toRightOf="@id/mibesmoises"
                    android:text="@string/txtmibesmoises"
                    android:layout_below="@id/view4"
                    style="@style/txtprincipal" />

                <TextView
                    android:id="@+id/txtmibesmoisesdesc"
                    android:layout_below="@id/txtmibesmoises"
                    android:layout_toRightOf="@id/mibesmoises"
                    android:text="@string/txtmibesmoisesdesc"
                    style="@style/txtdesc" />

                <Button
                    android:id="@+id/btnmibesmoises"
                    android:layout_below="@id/txtmibesmoisesdesc"
                    android:text="@string/btnver"
                    style="@style/btnvermas" />

                <View
                    android:id="@+id/view5"
                    style="@style/Divider"
                    android:layout_below="@id/btnmibesmoises" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
