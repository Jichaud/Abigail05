<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_babyinprodlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.BabyInnovation.babyinprodlist">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/babyinvarios"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtbabyinvarios"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/babyinvarios"
                    android:text="@string/txtbabyinvarios" />

                <TextView
                    android:id="@+id/txtbabyinvariosdesc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtbabyinvarios"
                    android:layout_toRightOf="@id/babyinvarios"
                    android:text="@string/txtbabyinvariosdesc" />

                <Button
                    android:id="@+id/btnbabyinvarios"
                    style="@style/btnvermas"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtbabyinvariosdesc"
                    android:text="@string/btnver" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/btnbabyinvarios" />

                <ImageView
                    android:id="@+id/babyinseguridad"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view1"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtbabyinseguridad"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view1"
                    android:layout_toRightOf="@id/babyinseguridad"
                    android:text="@string/txtbabyinseguridad" />

                <TextView
                    android:id="@+id/txtbabyinseguridaddesc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtbabyinseguridad"
                    android:layout_toRightOf="@id/babyinseguridad"
                    android:text="@string/txtbabyinseguridaddesc" />

                <Button
                    android:id="@+id/btnbabyinseguridad"
                    style="@style/btnvermas"
                    android:layout_below="@id/txtbabyinseguridaddesc"
                    android:text="@string/btnver" />

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/btnbabyinseguridad" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
