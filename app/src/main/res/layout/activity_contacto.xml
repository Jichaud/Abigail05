<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contacto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.contacto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnvmarca"
            android:id="@+id/txtnombre"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:background="@drawable/rounded"
            android:text="Nombre y apellido"/>

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-light"
            android:hint="nombre y apellido"
            android:textColorHint="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnvmarca"
            android:id="@+id/txtmail"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:background="@drawable/rounded"
            android:text="e-mail"/>

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="e-mail"
            android:layout_marginTop="2dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnvmarca"
            android:id="@+id/txtmsg"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:background="@drawable/rounded"
            android:text="Tu mensaje..."/>

        <EditText
            android:id="@+id/mensaje"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="Tu mensaje"
            android:layout_marginTop="2dp"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColorHint="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnvmarca"
            android:id="@+id/txtinfo"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:background="@drawable/rounded"
            android:text="Info adicional"/>

        <EditText
            android:id="@+id/info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="Color, talle | otra info"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColorHint="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnconsulta"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/pink"
            android:fontFamily="sans-serif-thin"
            android:text="@string/enviar"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
