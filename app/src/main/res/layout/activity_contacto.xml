<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contacto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.contacto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtnombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:fontFamily="sans-serif-light"
            android:padding="6dp"
            android:text="Nombre y apellido"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-light"
            android:hint="nombre y apellido"
            android:textColorHint="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/txtmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:fontFamily="sans-serif-light"
            android:padding="6dp"
            android:text="e-mail"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-light"
            android:hint="e-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/txtmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:fontFamily="sans-serif-light"
            android:padding="6dp"
            android:text="Tu mensaje..."
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/mensaje"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-light"
            android:hint="Tu mensaje"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColorHint="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/txtinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:fontFamily="sans-serif-light"
            android:padding="6dp"
            android:text="Info adicional"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="Color, talle | otra info"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColorHint="@color/colorPrimaryDark"/>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="¿Necesitás envío a domicilio? "/>

            <EditText
                android:id="@+id/calle"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:hint="Indicá la calle"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/callenumero"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:hint="Indicá la altura"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/piso"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:hint="Indicá piso y departamento"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/localidad"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:hint="Indicá la localidad"
                android:scrollbars="vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/provincia"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:hint="Indicá la provincia"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnenviodhl"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-thin"
                android:text="¿envíos?"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

        <Button
            android:id="@+id/btnconsulta"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/pink"
            android:fontFamily="sans-serif-thin"
            android:text="@string/enviar"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
