<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.abigail05.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/abigail05"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/txtnosotros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="6dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="6dp"
                    android:text="@string/txtnosotros"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/texprecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgAbi"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:id="@+id/txtprodabi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imgAbi"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/AMprodabi"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtconoce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtprodabi"
                        android:layout_toRightOf="@id/imgAbi"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:text="@string/AMtxtdesc"
                        android:textColor="@color/grey"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/abibtn"
                        style="@style/btnvermas"
                        android:layout_alignParentBottom="true"  />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgmarca"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/txtprodxmarca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgmarca"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:text="@string/AMbuscamarca"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtmarca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtprodxmarca"
                        android:layout_toEndOf="@id/imgmarca"
                        android:paddingLeft="10dp"
                        android:paddingTop="1dp"
                        android:text="@string/AMtxtdescxmarca"
                        android:textColor="@color/grey"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/marcabtn"
                        style="@style/btnvermas"
                        android:layout_below="@id/txtmarca"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgmail"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/txtprodxprod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgmail"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:text="@string/consulta"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtvarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtprodxprod"
                        android:layout_toEndOf="@id/imgmail"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:text="@string/consultatxt"
                        android:textColor="@color/grey"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnmail"
                        style="@style/btnvermas"
                        android:layout_below="@id/txtvarios"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>