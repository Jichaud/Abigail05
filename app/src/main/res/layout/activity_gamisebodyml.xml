<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gamisebodyml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.Gamise.gamisebodyml">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/gamisebodyml1"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtgamisebodyml1principal"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/gamisebodyml1"
                    android:text="@string/txtgamisebodyml" />

                <TextView
                    android:id="@+id/txtgamisebodyml1"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtgamisebodyml1principal"
                    android:layout_toRightOf="@id/gamisebodyml1"
                    android:text="@string/txtgamisebodyml1" />

                <Button
                    android:id="@+id/btngamisebodyml1"
                    style="@style/btnvermas"
                    android:layout_above="@id/view1" />

                <TextView
                    android:id="@+id/preciogamisebodyml1"
                    style="@style/precio"
                    android:layout_below="@id/gamisebodyml1" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/preciogamisebodyml1" />

                <ImageView
                    android:id="@+id/gamisebodyml2"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view1"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtgamisebodyml2principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view1"
                    android:layout_toRightOf="@id/gamisebodyml2"
                    android:text="@string/txtgamisebodyml" />

                <TextView
                    android:id="@+id/txtgamisebodyml2"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtgamisebodyml2principal"
                    android:layout_toRightOf="@id/gamisebodyml2"
                    android:text="@string/txtgamisebodyml2" />

                <Button
                    android:id="@+id/btngamisebodyml2"
                    style="@style/btnvermas"
                    android:layout_above="@id/view2" />

                <TextView
                    android:id="@+id/preciogamisebodyml2"
                    style="@style/precio"
                    android:layout_below="@id/gamisebodyml2" />

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/preciogamisebodyml2" />

                <ImageView
                    android:id="@+id/gamisebodyml3"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view2"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtgamisebodyml3principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view2"
                    android:layout_toRightOf="@id/gamisebodyml3"
                    android:text="@string/txtgamisebodyml" />

                <TextView
                    android:id="@+id/txtgamisebodyml3"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtgamisebodyml3principal"
                    android:layout_toRightOf="@id/gamisebodyml3"
                    android:text="@string/txtgamisebodyml3" />

                <Button
                    android:id="@+id/btngamisebodyml3"
                    style="@style/btnvermas"
                    android:layout_above="@id/view3" />

                <TextView
                    android:id="@+id/preciogamisebodyml3"
                    style="@style/precio"
                    android:layout_below="@id/gamisebodyml3" />

                <View
                    android:id="@+id/view3"
                    style="@style/Divider"
                    android:layout_below="@id/preciogamisebodyml3" />

                <ImageView
                    android:id="@+id/gamisebodyml4"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view3"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtgamisebodyml4principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view3"
                    android:layout_toRightOf="@id/gamisebodyml4"
                    android:text="@string/txtgamisebodyml" />

                <TextView
                    android:id="@+id/txtgamisebodyml4"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtgamisebodyml4principal"
                    android:layout_toRightOf="@id/gamisebodyml4"
                    android:text="@string/txtgamisebodyml4" />

                <Button
                    android:id="@+id/btngamisebodyml4"
                    style="@style/btnvermas"
                    android:layout_above="@id/view4" />

                <TextView
                    android:id="@+id/preciogamisebodyml4"
                    style="@style/precio"
                    android:layout_below="@id/gamisebodyml4" />

                <View
                    android:id="@+id/view4"
                    style="@style/Divider"
                    android:layout_below="@id/preciogamisebodyml4" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
