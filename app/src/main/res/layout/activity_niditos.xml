<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_niditos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.Abigail.niditos">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/nidito1img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/txtnidito1principal"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/nidito1img"
                    android:text="@string/txtNiditoPrincipal" />

                <TextView
                    android:id="@+id/nidito1txtdesc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtnidito1principal"
                    android:layout_toRightOf="@id/nidito1img"
                    android:text="@string/txtNiditoPrincipaldesc" />

                <Button
                    android:id="@+id/btnnidito1"
                    style="@style/btnvermas"
                    android:layout_above="@id/view1" />

                <TextView
                    android:id="@+id/precionidito1"
                    style="@style/precio"
                    android:layout_below="@id/nidito1img" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/precionidito1" />

                <ImageView
                    android:id="@+id/nidito2img"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/view1" />

                <TextView
                    android:id="@+id/txtnidito2principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view1"
                    android:layout_toRightOf="@id/nidito2img"
                    android:text="@string/txtCuellitoPrincipal" />

                <TextView
                    android:id="@+id/nidito2txtdesc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtnidito2principal"
                    android:layout_toRightOf="@id/nidito2img"
                    android:text="@string/txtCuellitoPrincipaldesc" />

                <Button
                    android:id="@+id/btnnidito2"
                    style="@style/btnvermas"
                    android:layout_above="@id/view2"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/precionidito2"
                    style="@style/precio"
                    android:layout_below="@id/nidito2img" />

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/precionidito2" />

                <ImageView
                    android:id="@+id/nidito3img"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/view2" />

                <TextView
                    android:id="@+id/txtnidito3principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view2"
                    android:layout_toRightOf="@id/nidito3img"
                    android:text="@string/txtCuellitoPrincipalAdulto" />

                <TextView
                    android:id="@+id/nidito3txtdesc"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtnidito3principal"
                    android:layout_toRightOf="@id/nidito3img"
                    android:text="@string/txtCuellitoPrincipaldescAdulto" />

                <Button
                    android:id="@+id/btnnidito3"
                    style="@style/btnvermas"
                    android:layout_above="@id/view3" />

                <TextView
                    android:id="@+id/precionidito3"
                    style="@style/precio"
                    android:layout_below="@id/nidito3img" />

                <View
                    android:id="@+id/view3"
                    style="@style/Divider"
                    android:layout_below="@id/precionidito3" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>