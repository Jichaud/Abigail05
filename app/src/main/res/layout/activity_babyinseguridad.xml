<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_babyinseguridad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.BabyInnovation.babyinseguridad">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/babyinseguridad1"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtbabyinseguridad1principal"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/babyinseguridad1"
                    android:text="@string/txtbabyinseguridad" />

                <TextView
                    android:id="@+id/txtbabyinseguridad1"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtbabyinseguridad1principal"
                    android:layout_toRightOf="@id/babyinseguridad1"
                    android:text="@string/txtbabyinseguridad1" />

                <Switch
                    android:id="@+id/switch1"
                    style="@style/switchstyle"
                    android:layout_above="@id/view1"
                    android:nextFocusDown="@id/lineara1" />

                <TextView
                    android:id="@+id/preciobabyinseguridad1"
                    style="@style/precio"
                    android:layout_below="@id/babyinseguridad1" />

                <LinearLayout
                    android:id="@+id/lineara1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view1"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView style="@style/card">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/babyinseguridad1a1"
                                android:layout_width="400dp"
                                android:layout_height="296dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/view1a1"
                                style="@style/Divider"
                                android:layout_below="@id/babyinseguridad1a1" />

                            <TextView
                                android:id="@+id/txtbabyinseguridad1principala1"
                                style="@style/txtcardprinc"
                                android:layout_below="@id/view1a1"
                                android:text="@string/txtbabyinseguridad" />

                            <TextView
                                android:id="@+id/txtbabyinseguridad1a1"
                                style="@style/txtcarddesc"
                                android:layout_below="@id/txtbabyinseguridad1principala1"
                                android:text="@string/txtbabyinseguridad1" />

                            <View
                                android:id="@+id/view2a1"
                                style="@style/Divider"
                                android:layout_below="@id/txtbabyinseguridad1a1" />

                            <Button
                                android:id="@+id/btnconsultaa1"
                                style="@style/btnstock"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@id/view2a1"
                                android:text="@string/stock" />

                            <Button
                                android:id="@+id/btncomprababyinseguridad1"
                                style="@style/btncomprar"
                                android:layout_below="@id/view2a1"
                                android:layout_toRightOf="@id/btnconsultaa1"
                                android:text="@string/btnverprecio" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/preciobabyinseguridad1" />

                <ImageView
                    android:id="@+id/babyinseguridad2"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/lineara1"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtbabyinseguridad2principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/lineara1"
                    android:layout_toRightOf="@id/babyinseguridad2"
                    android:text="@string/txtbabyinseguridad" />

                <TextView
                    android:id="@+id/txtbabyinseguridad2"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtbabyinseguridad2principal"
                    android:layout_toRightOf="@id/babyinseguridad2"
                    android:text="@string/txtbabyinseguridad2" />

                <Switch
                    android:id="@+id/switch2"
                    style="@style/switchstyle"
                    android:layout_above="@id/view2" />

                <TextView
                    android:id="@+id/preciobabyinseguridad2"
                    style="@style/precio"
                    android:layout_below="@id/babyinseguridad2" />

                <LinearLayout
                    android:id="@+id/lineara2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view2"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView style="@style/card">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/babyinseguridad2a2"
                                android:layout_width="400dp"
                                android:layout_height="296dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/view1a2"
                                style="@style/Divider"
                                android:layout_below="@id/babyinseguridad2a2" />

                            <TextView
                                android:id="@+id/txtbabyinseguridad2principala2"
                                style="@style/txtcardprinc"
                                android:layout_below="@id/view1a2"
                                android:text="@string/txtbabyinseguridad" />

                            <TextView
                                android:id="@+id/txtbabyinseguridad2a2"
                                style="@style/txtcarddesc"
                                android:layout_below="@id/txtbabyinseguridad2principala2"
                                android:text="@string/txtbabyinseguridad2" />

                            <View
                                android:id="@+id/view2a2"
                                style="@style/Divider"
                                android:layout_below="@id/txtbabyinseguridad2a2" />

                            <Button
                                android:id="@+id/btnconsultaa2"
                                style="@style/btnstock"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@id/view2a2"
                                android:text="@string/stock" />

                            <Button
                                android:id="@+id/btncomprababyinseguridad2"
                                style="@style/btncomprar"
                                android:layout_below="@id/view2a2"
                                android:layout_toRightOf="@id/btnconsultaa2"
                                android:text="@string/btnverprecio" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/preciobabyinseguridad2" />

                <ImageView
                    android:id="@+id/babyinseguridad3"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/lineara2"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtbabyinseguridad3principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/lineara2"
                    android:layout_toRightOf="@id/babyinseguridad3"
                    android:text="@string/txtbabyinseguridad" />

                <TextView
                    android:id="@+id/txtbabyinseguridad3"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtbabyinseguridad3principal"
                    android:layout_toRightOf="@id/babyinseguridad3"
                    android:text="@string/txtbabyinseguridad3" />

                <Switch
                    android:id="@+id/switch3"
                    style="@style/switchstyle"
                    android:layout_above="@id/view3" />

                <TextView
                    android:id="@+id/preciobabyinseguridad3"
                    style="@style/precio"
                    android:layout_below="@id/babyinseguridad3" />

                <LinearLayout
                    android:id="@+id/lineara3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view3"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView style="@style/card">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/babyinseguridad3a3"
                                android:layout_width="400dp"
                                android:layout_height="296dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/view1a3"
                                style="@style/Divider"
                                android:layout_below="@id/babyinseguridad3a3" />

                            <TextView
                                android:id="@+id/txtbabyinseguridad3principala3"
                                style="@style/txtcardprinc"
                                android:layout_below="@id/view1a3"
                                android:text="@string/txtbabyinseguridad" />

                            <TextView
                                android:id="@+id/txtbabyinseguridad3a3"
                                style="@style/txtcarddesc"
                                android:layout_below="@id/txtbabyinseguridad3principala3"
                                android:text="@string/txtbabyinseguridad3" />

                            <View
                                android:id="@+id/view2a3"
                                style="@style/Divider"
                                android:layout_below="@id/txtbabyinseguridad3a3" />

                            <Button
                                android:id="@+id/btnconsultaa3"
                                style="@style/btnstock"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@id/view2a3"
                                android:text="@string/stock" />

                            <Button
                                android:id="@+id/btncomprababyinseguridad3"
                                style="@style/btncomprar"
                                android:layout_below="@id/view2a3"
                                android:layout_toRightOf="@id/btnconsultaa3"
                                android:text="@string/btnverprecio" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    style="@style/Divider"
                    android:layout_below="@id/preciobabyinseguridad3" />

                <ImageView
                    android:id="@+id/babyinseguridad4"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/lineara3"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtbabyinseguridad4principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/lineara3"
                    android:layout_toRightOf="@id/babyinseguridad4"
                    android:text="@string/txtbabyinseguridad" />

                <TextView
                    android:id="@+id/txtbabyinseguridad4"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtbabyinseguridad4principal"
                    android:layout_toRightOf="@id/babyinseguridad4"
                    android:text="@string/txtbabyinseguridad4" />

                <Switch
                    android:id="@+id/switch4"
                    style="@style/switchstyle"
                    android:layout_above="@id/view4" />

                <TextView
                    android:id="@+id/preciobabyinseguridad4"
                    style="@style/precio"
                    android:layout_below="@id/babyinseguridad4" />

                <LinearLayout
                    android:id="@+id/lineara4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view4"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView style="@style/card">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/babyinseguridad4a4"
                                android:layout_width="400dp"
                                android:layout_height="296dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/view1a4"
                                style="@style/Divider"
                                android:layout_below="@id/babyinseguridad4a4" />

                            <TextView
                                android:id="@+id/txtbabyinseguridad4principala4"
                                style="@style/txtcardprinc"
                                android:layout_below="@id/view1a4"
                                android:text="@string/txtbabyinseguridad" />

                            <TextView
                                android:id="@+id/txtbabyinseguridad4a4"
                                style="@style/txtcarddesc"
                                android:layout_below="@id/txtbabyinseguridad4principala4"
                                android:text="@string/txtbabyinseguridad4" />

                            <View
                                android:id="@+id/view2a4"
                                style="@style/Divider"
                                android:layout_below="@id/txtbabyinseguridad4a4" />

                            <Button
                                android:id="@+id/btnconsultaa4"
                                style="@style/btnstock"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@id/view2a4"
                                android:text="@string/stock" />

                            <Button
                                android:id="@+id/btncomprababyinseguridad4"
                                style="@style/btncomprar"
                                android:layout_below="@id/view2a4"
                                android:layout_toRightOf="@id/btnconsultaa4"
                                android:text="@string/btnverprecio" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    style="@style/Divider"
                    android:layout_below="@id/preciobabyinseguridad4" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
