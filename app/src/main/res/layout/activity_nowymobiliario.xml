<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nowymobiliario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    tools:context="com.abigail05.NowyBaby.nowymobiliario">

    <Button
        android:id="@+id/btnhome"
        style="@style/btnhome" />

    <Button
        android:id="@+id/btnvmarca"
        style="@style/btnmarca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnhome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/nowymobiliario1"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtnowymobiliario1principal"
                    style="@style/txtprincipal"
                    android:layout_toRightOf="@id/nowymobiliario1"
                    android:text="@string/txtnowymobiliario" />

                <TextView
                    android:id="@+id/txtnowymobiliario1"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtnowymobiliario1principal"
                    android:layout_toRightOf="@id/nowymobiliario1"
                    android:text="@string/txtnowymobiliario1" />

                <Button
                    android:id="@+id/btnnowymobiliario1"
                    style="@style/btnvermas"
                    android:layout_above="@id/view1" />

                <TextView
                    android:id="@+id/precionowymobiliario1"
                    style="@style/precio"
                    android:layout_below="@id/nowymobiliario1" />

                <View
                    android:id="@+id/view1"
                    style="@style/Divider"
                    android:layout_below="@id/precionowymobiliario1" />

                <ImageView
                    android:id="@+id/nowymobiliario2"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/view1"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/txtnowymobiliario2principal"
                    style="@style/txtprincipal"
                    android:layout_below="@id/view1"
                    android:layout_toRightOf="@id/nowymobiliario2"
                    android:text="@string/txtnowymobiliario" />

                <TextView
                    android:id="@+id/txtnowymobiliario2"
                    style="@style/txtdesc"
                    android:layout_below="@id/txtnowymobiliario2principal"
                    android:layout_toRightOf="@id/nowymobiliario2"
                    android:text="@string/txtnowymobiliario2" />

                <Button
                    android:id="@+id/btnnowymobiliario2"
                    style="@style/btnvermas"
                    android:layout_above="@id/view2" />

                <TextView
                    android:id="@+id/precionowymobiliario2"
                    style="@style/precio"
                    android:layout_below="@id/nowymobiliario2"
                    android:text="PrÃ³ximamente" />

                <View
                    android:id="@+id/view2"
                    style="@style/Divider"
                    android:layout_below="@id/precionowymobiliario2" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
