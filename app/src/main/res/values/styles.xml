<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#90CAF9</item>
        <item name="colorPrimaryDark">#64B5F6</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">#64B5F6</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/cardview_light_background</item>

    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="precio">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="btnvermas">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:backgroundTint">#FF9800</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:text">@string/btnver</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btnhome">
        <item name="android:backgroundTint">@color/teal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">home</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnmarca">
        <item name="android:backgroundTint">@color/teal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:text">marca</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnstock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#E91E63</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btncomprar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/btncomprar</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txtprincipal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txtdesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LinearCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="txtcardprinc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="txtcarddesc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txtcardprecio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="txtvistas">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#E3F2FD</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtvistas1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#E3F2FD</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="switchstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">@string/btnver</item>
    </style>

</resources>
